@page
@model Citrix.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Aanpassen</h1>

<h4>Manager</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Manager.Id" />
            <div class="form-group">
                <label asp-for="Manager.FirstName" class="control-label">Voornaam</label>
                <input asp-for="Manager.FirstName" class="form-control" />
                <span asp-validation-for="Manager.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manager.LastName" class="control-label">Achternaam</label>
                <input asp-for="Manager.LastName" class="form-control" />
                <span asp-validation-for="Manager.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manager.PhotoPath" class="control-label">Bestand</label>
                <input asp-for="Manager.PhotoPath" class="form-control" />
                <span asp-validation-for="Manager.PhotoPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Wijzigen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Terug naar overzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
